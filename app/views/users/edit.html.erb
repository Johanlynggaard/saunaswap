<% if @user.id == current_user.id %>
  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-6">

        <h2>Edit your profile</h2>

        <%= simple_form_for(profile_path) do |f| %>

          <div class="form-group">
            <%= f.label :name, required: false, label: "Update your name" %>
            <%= f.text_field :name, required: false, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :address, required: false, label: "Update your address" %>
            <%= f.text_field :address, required: false, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :phone_number, required: false, label: "Update your phone number" %>
            <%= f.text_field :phone_number, required: false, class: 'form-control' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", class: 'btn btn-outline-primary' %>
            <%= link_to 'Cancel', profile_path, class: 'btn btn-outline-warning' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-3">
    <h1>Not your profile dude</h1>
    <%controller.redirect_to root_path %>
  </div>
<% end %>
